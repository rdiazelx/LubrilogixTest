<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="google" content="notranslate">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_OpenIDConnect_DotNet</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/filterstyle.css" rel="stylesheet" />

    @* no tocar font awesome*@
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

    @* no tocar font awesome*@



    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" rel="stylesheet">
 

</head>
<body>
    <header>
        <div class="container-login">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


        </div>

       
            @if (User.Identity.IsAuthenticated)
            {
                <div class="sidebar" id="sidebar">

                    <button class="toggle-button" id="toggleButton">☰</button> 

                    <ul class="navbar-nav-menu">
                        <span class="nav-item-menu">
                            <a class="nav-link-menu" asp-area="" asp-controller="Lubrilogix" asp-action="Inicio">
                                <i class="fas fa-home"></i>
                                <span class="menu-text">Inicio</span>
                            </a>
                        </span>
                        <span class="nav-item-menu">
                            <a class="nav-link-menu" asp-area="" asp-controller="Lubrilogix" asp-action="vistaInventario">
                                <i class="fas fa-box"></i>
                                <span class="menu-text">Inventario</span>
                            </a>
                        </span>
                    <span class="nav-item-menu">
                        <a class="nav-link-menu" asp-area="" asp-controller="Lubrilogix" asp-action="Inventario">
                            <i class="fas fa-box"></i>
                            <span class="menu-text">Historial</span>
                        </a>
                    </span>
                        <span class="nav-item-menu">
                            <a class="nav-link-menu" asp-area="" asp-controller="Lubrilogix" asp-action="Proveedores">
                                <i class="fas fa-truck"></i>
                                <span class="menu-text">Proveedores</span>
                            </a>
                        </span>
                        <span class="nav-item-menu">
                            <a class="nav-link-menu" asp-area="" asp-controller="Lubrilogix" asp-action="Productos">
                                <i class="fas fa-tags"></i>
                                <span class="menu-text">Productos</span>
                            </a>
                        </span>
                        <span class="nav-item-menu">
                            <a class="nav-link-menu" asp-area="" asp-controller="Lubrilogix" asp-action="Sucursales">
                                <i class="fas fa-store"></i>
                                <span class="menu-text">Sucursales</span>
                            </a>
                        </span>
                    </ul>
                </div>
            }
         </header>

    <div class="main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Universidad Hispanoamericana - <a asp-area="" asp-controller="Home" asp-action="Soporte">Soporte</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
@*     <script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>  *@



    <script>

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
