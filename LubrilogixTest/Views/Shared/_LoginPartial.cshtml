@using System.Security.Principal

<link href="~/css/boton_ingresar.css" rel="stylesheet" />



<ul class="navbar-navT">

    @if (User.Identity.IsAuthenticated)
    {

        <div class="welcome-message-container">

            <div class="box-name">
                <span class="nav-item">
                    <span class="navbar-text text-dark">Hola @User.Identity.Name!</span>
                </span>
            </div>

        </div>

        <div class="ingresar-container">

            <div class="box">

                <span class="nav-itemT">
                    <a class="nav-linkT " asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Salir</a>
                </span>

            </div>


        </div>
    }
    else
    {
        <div class="ingresar-container">
            <div class="box">
                <span class="nav-itemT">
                    <a class="nav-linkT" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Ingresar</a>
                </span>
            </div>
        </div>
    }

</ul>
